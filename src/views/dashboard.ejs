<%- include('partials/header') -%>
<%- include('partials/navbar') -%>


<main>
    <div class="title">
        Market:
    </div>
    <div class="poke-container">
        <% pokemons.forEach(pokemon =>{ %>
            <div class="pokemon">
                
                <div>
                    <%- pokemon.pokemonName %> 
                </div>
                    
                <a href="https://www.pokemon.com/br/pokedex/<%=pokemon.pokemonName %>">
                    <img src="<%=pokemon.image %>" alt="">
                </a>
                <br>
                <h4><%- pokemon.pokemonId %></h4>
                <div class="poke-type">
                  <%- pokemon.type %>
                </div>
                <div class="poke-price">
                  Price: <%- pokemon.pokemonPrice %> points
                </div>
                

                <div class="button-cont" ><a class="btn-buy" href="#" target="_blank" rel="nofollow noopener">Buy</a></div>

            </div>
            
          <% }); %>
    </div>
</main>
 

<script src="/scripts/colors.js"></script>
<%- include('partials/footer') -%>

